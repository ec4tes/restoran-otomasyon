<UserControl x:Class="RestoranOtomasyon.Views.KategoriYonetimView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RestoranOtomasyon.Views"
             mc:Ignorable="d"
             Background="Transparent">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
        <local:BoolToAktifConverter x:Key="BoolToAktifConverter"/>
        <local:BoolToNewEditConverter x:Key="BoolToNewEditConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        
        <!-- Kategori Listesi -->
        <Border Grid.Column="0" Background="#313244" Margin="20" CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#45475a" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <TextBlock Text="ðŸ“ Kategoriler" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#cdd6f4"/>
                        <Button Content="+ Yeni Kategori" 
                                Command="{Binding NewKategoriCommand}"
                                HorizontalAlignment="Right"
                                Background="#a6e3a1"
                                Foreground="#1e1e2e"
                                FontWeight="Bold"
                                Padding="15,8"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Kategoriler}" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#45475a" 
                                        CornerRadius="8" 
                                        Margin="5" 
                                        Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Renk gÃ¶stergesi -->
                                        <Border Grid.Column="0" 
                                                Background="{Binding Renk}" 
                                                CornerRadius="3" 
                                                Width="8"/>
                                        
                                        <!-- Bilgiler -->
                                        <StackPanel Grid.Column="1" Margin="15,0">
                                            <TextBlock Text="{Binding Ad}" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="#cdd6f4"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="SÄ±ra: " Foreground="#a6adc8" FontSize="12"/>
                                                <TextBlock Text="{Binding Sira}" Foreground="#a6adc8" FontSize="12"/>
                                                <TextBlock Text=" | " Foreground="#a6adc8" FontSize="12"/>
                                                <TextBlock Text="{Binding Aktif, Converter={StaticResource BoolToAktifConverter}}" 
                                                           FontSize="12"
                                                           Foreground="#a6adc8"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- DÃ¼zenle -->
                                        <Button Grid.Column="2" 
                                                Content="âœï¸" 
                                                Command="{Binding DataContext.EditKategoriCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#89b4fa"
                                                Foreground="White"
                                                FontSize="14"
                                                Padding="10,5"
                                                Margin="5,0"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        
                                        <!-- Sil -->
                                        <Button Grid.Column="3" 
                                                Content="ðŸ—‘ï¸" 
                                                Command="{Binding DataContext.DeleteKategoriCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#f38ba8"
                                                Foreground="White"
                                                FontSize="14"
                                                Padding="10,5"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Edit Panel -->
        <Border Grid.Column="1" 
                Background="#313244" 
                Margin="0,20,20,20" 
                CornerRadius="12"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#45475a" CornerRadius="12,12,0,0" Padding="20,15">
                    <TextBlock Text="{Binding IsNew, Converter={StaticResource BoolToNewEditConverter}}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#cdd6f4"/>
                </Border>
                
                <!-- Form -->
                <StackPanel Grid.Row="1" Margin="20">
                    <TextBlock Text="Kategori AdÄ±" Foreground="#cdd6f4" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EditAd, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#45475a" 
                             Foreground="#cdd6f4" 
                             BorderThickness="0"
                             Padding="10"
                             FontSize="14"/>
                    
                    <TextBlock Text="Renk (Hex)" Foreground="#cdd6f4" Margin="0,15,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding EditRenk, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="#45475a" 
                                 Foreground="#cdd6f4" 
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14"/>
                        <Border Grid.Column="1" 
                                Background="{Binding EditRenk}" 
                                CornerRadius="4" 
                                Margin="5,0,0,0"/>
                    </Grid>
                    
                    <!-- Renk Ã¶nerileri -->
                    <WrapPanel Margin="0,10,0,0">
                        <Button Content="" Background="#f38ba8" Width="30" Height="30" Margin="2" BorderThickness="0"
                                Command="{Binding}" CommandParameter="#f38ba8" Click="ColorButton_Click"/>
                        <Button Content="" Background="#fab387" Width="30" Height="30" Margin="2" BorderThickness="0"
                                Command="{Binding}" CommandParameter="#fab387" Click="ColorButton_Click"/>
                        <Button Content="" Background="#f9e2af" Width="30" Height="30" Margin="2" BorderThickness="0"
                                Command="{Binding}" CommandParameter="#f9e2af" Click="ColorButton_Click"/>
                        <Button Content="" Background="#a6e3a1" Width="30" Height="30" Margin="2" BorderThickness="0"
                                Command="{Binding}" CommandParameter="#a6e3a1" Click="ColorButton_Click"/>
                        <Button Content="" Background="#89b4fa" Width="30" Height="30" Margin="2" BorderThickness="0"
                                Command="{Binding}" CommandParameter="#89b4fa" Click="ColorButton_Click"/>
                        <Button Content="" Background="#cba6f7" Width="30" Height="30" Margin="2" BorderThickness="0"
                                Command="{Binding}" CommandParameter="#cba6f7" Click="ColorButton_Click"/>
                    </WrapPanel>
                    
                    <TextBlock Text="SÄ±ra" Foreground="#cdd6f4" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding EditSira, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#45475a" 
                             Foreground="#cdd6f4" 
                             BorderThickness="0"
                             Padding="10"
                             FontSize="14"/>
                    
                    <CheckBox Content="Aktif" 
                              IsChecked="{Binding EditAktif}" 
                              Foreground="#cdd6f4" 
                              Margin="0,15,0,0"
                              FontSize="14"/>
                </StackPanel>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                    <Button Content="Ä°ptal" 
                            Command="{Binding CancelEditCommand}"
                            Background="#6c7086"
                            Foreground="#cdd6f4"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="Kaydet" 
                            Command="{Binding SaveKategoriCommand}"
                            Background="#a6e3a1"
                            Foreground="#1e1e2e"
                            FontWeight="Bold"
                            Padding="20,10"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Placeholder when not editing -->
        <Border Grid.Column="1" 
                Background="#313244" 
                Margin="0,20,20,20" 
                CornerRadius="12"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityInverseConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ“" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="DÃ¼zenlemek iÃ§in bir kategori seÃ§in" 
                           Foreground="#6c7086" 
                           FontSize="14"
                           Margin="0,10,0,0"/>
                <TextBlock Text="veya yeni kategori ekleyin" 
                           Foreground="#6c7086" 
                           FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
