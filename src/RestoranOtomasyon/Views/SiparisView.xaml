                                <Button Style="{StaticResource UrunButtonStyle}"
                                        Command="{Binding DataContext.AddUrunCommand, 
                                                 RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}">
                                    <Grid Margin="12">
