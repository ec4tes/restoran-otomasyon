                    </StackPanel>
                </Button>
                
                <!-- Kategori Listesi -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Kategoriler}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource KategoriButtonStyle}"
                                        Content="{Binding Ad}"
                                        Command="{Binding DataContext.SelectKategoriCommand, 
                                                 RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
        
        <!-- Orta Panel: ÃœrÃ¼nler -->
        <Border Grid.Column="1" Padding="15">
            <DockPanel>
                <!-- BaÅŸlÄ±k -->
                <TextBlock DockPanel.Dock="Top" 
                           Text="{Binding SelectedKategori.Ad, FallbackValue='ÃœrÃ¼nler'}"
