                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#3D3D5C"
                                    Content="â—€ Geri"
