                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                            
                                            <!-- Not GÃ¶stergesi -->
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Notlar}"
                                                       FontSize="11"
                                                       Foreground="#FFD700"
                                                       FontStyle="Italic"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="10,0"
                                                       Visibility="{Binding HasNot, Converter={StaticResource BoolToVis}}"/>
                                            
                                            <!-- Not, Fiyat ve Sil ButonlarÄ± -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Style="{StaticResource MiniButtonStyle}"
                                                        Content="ðŸ’°"
                                                        FontSize="14"
                                                        Background="#f9e2af"
                                                        ToolTip="Fiyat DeÄŸiÅŸtir"
                                                        Command="{Binding DataContext.OpenFiyatPopupCommand, 
                                                                 RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,5,0"/>
                                                <Button Style="{StaticResource MiniButtonStyle}"
                                                        Content="ðŸ“"
                                                        FontSize="14"
                                                        ToolTip="Not Ekle"
                                                        Command="{Binding DataContext.OpenNotPopupCommand, 
                                                                 RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,5,0"/>
                                                <Button Style="{StaticResource MiniButtonStyle}"
                                                        Content="ðŸ—‘"
                                                        FontSize="14"
                                                        Background="#E53935"
                                                        ToolTip="Sil"
                                                        Command="{Binding DataContext.RemoveKalemCommand, 
                                                                 RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
        
        <!-- Not Popup -->
        <Border Grid.ColumnSpan="3"
                Background="#80000000"
                Visibility="{Binding IsNotPopupOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#1A1A2E"
                    CornerRadius="15"
                    Width="450"
