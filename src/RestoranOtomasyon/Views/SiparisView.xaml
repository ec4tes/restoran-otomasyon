                    <TextBlock Text="{Binding FiyatDuzenlenenKalem.UrunAd}" FontSize="16" 
                               Foreground="#89b4fa" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    
                    <TextBlock FontSize="12" Foreground="#6c7086" HorizontalAlignment="Center" Margin="0,0,0,20">
