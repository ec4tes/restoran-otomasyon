                                            <Border Background="#FFD700" CornerRadius="12" Padding="6,3">
                                                <TextBlock Text="â­" FontSize="12"/>
                                            </Border>
                                        </Border>
                                        
                                        <!-- ÃœrÃ¼n AdÄ± -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding DisplayName}"
