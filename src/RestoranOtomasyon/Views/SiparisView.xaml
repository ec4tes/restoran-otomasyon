                                        </Border>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
        
        <!-- SaÄŸ Panel: SipariÅŸ Listesi -->
        <Border Grid.Column="2" Background="#16162A">
            <DockPanel>
                <!-- BaÅŸlÄ±k -->
                <Border DockPanel.Dock="Top" Background="#FF6B35" Padding="15">
                    <TextBlock Text="{Binding MasaBaslik}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
