                        <Button Grid.Column="1"
                                Style="{StaticResource ActionButtonStyle}"
                                Content="Kaydet"
                                Command="{Binding SaveKalemNotCommand}"
                                Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
        
        <!-- Fiyat DÃ¼zenleme Popup -->
