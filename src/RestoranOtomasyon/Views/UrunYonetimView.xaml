<UserControl x:Class="RestoranOtomasyon.Views.UrunYonetimView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RestoranOtomasyon.Views"
             mc:Ignorable="d"
             Background="Transparent">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
        <local:BoolToAktifConverter x:Key="BoolToAktifConverter"/>
        <local:BoolToFavoriConverter x:Key="BoolToFavoriConverter"/>
        <local:BoolToNewEditUrunConverter x:Key="BoolToNewEditUrunConverter"/>
        
        <!-- ComboBox Dark Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#45475a"/>
            <Setter Property="Foreground" Value="#cdd6f4"/>
            <Setter Property="BorderBrush" Value="#585b70"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Focusable="False"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="1" Text="â–¼" Foreground="#a6adc8" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="10,8,30,8"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" 
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#313244" BorderBrush="#585b70" 
                                            BorderThickness="1" CornerRadius="6" Margin="0,2,0,0">
                                        <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#cdd6f4"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#45475a"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#585b70"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- ÃœrÃ¼n Listesi -->
        <Border Grid.Column="0" Background="#313244" Margin="20" CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#45475a" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <TextBlock Text="ðŸ• ÃœrÃ¼nler" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#cdd6f4"/>
                        <Button Content="+ Yeni ÃœrÃ¼n" 
                                Command="{Binding NewUrunCommand}"
                                HorizontalAlignment="Right"
                                Background="#a6e3a1"
                                Foreground="#1e1e2e"
                                FontWeight="Bold"
                                Padding="15,8"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Kategori Filter -->
                <Border Grid.Row="1" Background="#3b3d52" Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Kategori Filtrele: " Foreground="#a6adc8" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding Kategoriler}" 
                                  SelectedItem="{Binding FilterKategori}"
                                  DisplayMemberPath="Ad"
                                  Width="200"
                                  Style="{StaticResource DarkComboBoxStyle}"/>
                        <Button Content="TÃ¼mÃ¼" 
                                Click="ClearFilter_Click"
                                Background="#6c7086"
                                Foreground="#cdd6f4"
                                Padding="10,5"
                                Margin="10,0,0,0"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Urunler}" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#45475a" 
                                        CornerRadius="8" 
                                        Margin="5" 
                                        Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Bilgiler -->
                                        <StackPanel Grid.Column="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Ad}" 
                                                           FontSize="16" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="#cdd6f4"/>
                                                <TextBlock Text="{Binding Favori, Converter={StaticResource BoolToFavoriConverter}}" 
                                                           FontSize="14"
                                                           Margin="8,0,0,0"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Fiyat, StringFormat='{}{0:N2} â‚º'}" 
                                                           Foreground="#a6e3a1" 
                                                           FontSize="14"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text=" | " Foreground="#a6adc8" FontSize="12"/>
                                                <TextBlock Text="{Binding KategoriAd}" Foreground="#89b4fa" FontSize="12"/>
                                                <TextBlock Text=" | " Foreground="#a6adc8" FontSize="12"/>
                                                <TextBlock Text="{Binding Aktif, Converter={StaticResource BoolToAktifConverter}}" 
                                                           FontSize="12"
                                                           Foreground="#a6adc8"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Favori Toggle -->
                                        <Button Grid.Column="1" 
                                                Content="â­" 
                                                Command="{Binding DataContext.ToggleFavoriCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#f9e2af"
                                                Foreground="#1e1e2e"
                                                FontSize="14"
                                                Padding="10,5"
                                                Margin="5,0"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Favori DeÄŸiÅŸtir">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        
                                        <!-- DÃ¼zenle -->
                                        <Button Grid.Column="2" 
                                                Content="âœï¸" 
                                                Command="{Binding DataContext.EditUrunCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#89b4fa"
                                                Foreground="White"
                                                FontSize="14"
                                                Padding="10,5"
                                                Margin="5,0"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        
                                        <!-- Sil -->
                                        <Button Grid.Column="3" 
                                                Content="ðŸ—‘ï¸" 
                                                Command="{Binding DataContext.DeleteUrunCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#f38ba8"
                                                Foreground="White"
                                                FontSize="14"
                                                Padding="10,5"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Edit Panel -->
        <Border Grid.Column="1" 
                Background="#313244" 
                Margin="0,20,20,20" 
                CornerRadius="12"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#45475a" CornerRadius="12,12,0,0" Padding="20,15">
                    <TextBlock Text="{Binding IsNew, Converter={StaticResource BoolToNewEditUrunConverter}}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#cdd6f4"/>
                </Border>
                
                <!-- Form -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="ÃœrÃ¼n AdÄ±" Foreground="#cdd6f4" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding EditAd, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="#45475a" 
                                 Foreground="#cdd6f4" 
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14"/>
                        
                        <TextBlock Text="Fiyat (â‚º)" Foreground="#cdd6f4" Margin="0,15,0,5"/>
                        <TextBox Text="{Binding EditFiyat, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="#45475a" 
                                 Foreground="#cdd6f4" 
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14"/>
                        
                        <TextBlock Text="YarÄ±m Porsiyon FiyatÄ± (â‚º) - Opsiyonel" Foreground="#cdd6f4" Margin="0,15,0,5"/>
                        <TextBox Text="{Binding EditYarimPorsiyonFiyat, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" 
                                 Background="#45475a" 
                                 Foreground="#cdd6f4" 
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14"/>
                        <TextBlock Text="ðŸ’¡ YarÄ±m porsiyon fiyatÄ± girilirse, sipariÅŸ sÄ±rasÄ±nda yarÄ±m/tam seÃ§eneÄŸi Ã§Ä±kar" 
                                   Foreground="#6c7086" FontSize="11" Margin="0,3,0,0"/>
                        
                        <TextBlock Text="Kategori" Foreground="#cdd6f4" Margin="0,15,0,5"/>
                        <ComboBox ItemsSource="{Binding Kategoriler}" 
                                  SelectedValue="{Binding EditKategoriId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Ad"
                                  Background="#45475a"
                                  Foreground="#cdd6f4"
                                  Padding="10"/>
                        
                        <TextBlock Text="AÃ§Ä±klama (Opsiyonel)" Foreground="#cdd6f4" Margin="0,15,0,5"/>
                        <TextBox Text="{Binding EditAciklama, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="#45475a" 
                                 Foreground="#cdd6f4" 
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="80"/>
                        
                        <CheckBox Content="Favori" 
                                  IsChecked="{Binding EditFavori}" 
                                  Foreground="#cdd6f4" 
                                  Margin="0,15,0,0"
                                  FontSize="14"/>
                        
                        <CheckBox Content="Aktif" 
                                  IsChecked="{Binding EditAktif}" 
                                  Foreground="#cdd6f4" 
                                  Margin="0,10,0,0"
                                  FontSize="14"/>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                    <Button Content="Ä°ptal" 
                            Command="{Binding CancelEditCommand}"
                            Background="#6c7086"
                            Foreground="#cdd6f4"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="Kaydet" 
                            Command="{Binding SaveUrunCommand}"
                            Background="#a6e3a1"
                            Foreground="#1e1e2e"
                            FontWeight="Bold"
                            Padding="20,10"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Placeholder when not editing -->
        <Border Grid.Column="1" 
                Background="#313244" 
                Margin="0,20,20,20" 
                CornerRadius="12"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityInverseConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ•" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="DÃ¼zenlemek iÃ§in bir Ã¼rÃ¼n seÃ§in" 
                           Foreground="#6c7086" 
                           FontSize="14"
                           Margin="0,10,0,0"/>
                <TextBlock Text="veya yeni Ã¼rÃ¼n ekleyin" 
                           Foreground="#6c7086" 
                           FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
