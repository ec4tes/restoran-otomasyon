<UserControl x:Class="RestoranOtomasyon.Views.MasaYonetimView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RestoranOtomasyon.Views"
             xmlns:models="clr-namespace:RestoranOtomasyon.Models"
             mc:Ignorable="d"
             Background="Transparent">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
        <local:BoolToAktifConverter x:Key="BoolToAktifConverter"/>
        <local:BolumToStringConverter x:Key="BolumToStringConverter"/>
        <local:DurumToStringConverter x:Key="DurumToStringConverter"/>
        <local:DurumToColorConverter x:Key="DurumToColorConverter"/>
        <local:BoolToNewEditMasaConverter x:Key="BoolToNewEditMasaConverter"/>
        
        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#45475a"/>
            <Setter Property="Foreground" Value="#cdd6f4"/>
            <Setter Property="BorderBrush" Value="#585b70"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"/>
                                                <Path Grid.Column="1" Data="M 0 0 L 4 4 L 8 0 Z" Fill="#cdd6f4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,0,30,0" IsHitTestVisible="False"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" PopupAnimation="Slide">
                                <Border Background="#313244" BorderBrush="#585b70" BorderThickness="1" CornerRadius="6" MaxHeight="200" MinWidth="{TemplateBinding ActualWidth}">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#585b70"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#cdd6f4"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45475a"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#89b4fa"/>
                                <Setter Property="Foreground" Value="#1e1e2e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>
        
        <!-- Masa Listesi -->
        <Border Grid.Column="0" Background="#313244" Margin="20" CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#45475a" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <TextBlock Text="ðŸª‘ Masalar" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#cdd6f4"/>
                        <Button Content="+ Yeni Masa" 
                                Command="{Binding NewMasaCommand}"
                                HorizontalAlignment="Right"
                                Background="#a6e3a1"
                                Foreground="#1e1e2e"
                                FontWeight="Bold"
                                Padding="15,8"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Masalar}" Margin="10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#45475a" 
                                        CornerRadius="8" 
                                        Margin="5" 
                                        Padding="15"
                                        Width="200">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Masa No ve Durum -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <Border Background="{Binding Durum, Converter={StaticResource DurumToColorConverter}}" 
                                                    CornerRadius="4" 
                                                    Padding="8,4"
                                                    Margin="0,0,10,0">
                                                <TextBlock Text="{Binding MasaNo}" 
                                                           FontSize="16" 
                                                           FontWeight="Bold" 
                                                           Foreground="White"/>
                                            </Border>
                                            <TextBlock Text="{Binding Durum, Converter={StaticResource DurumToStringConverter}}" 
                                                       FontSize="12"
                                                       Foreground="#a6adc8"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <!-- Bilgiler -->
                                        <StackPanel Grid.Row="1" Margin="0,10,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“ " Foreground="#a6adc8" FontSize="12"/>
                                                <TextBlock Text="{Binding Bolum, Converter={StaticResource BolumToStringConverter}}" 
                                                           Foreground="#89b4fa" 
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock Text="ðŸ‘¥ " Foreground="#a6adc8" FontSize="12"/>
                                                <TextBlock Text="{Binding Kapasite, StringFormat='{}{0} kiÅŸilik'}" 
                                                           Foreground="#a6adc8" 
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Aktif, Converter={StaticResource BoolToAktifConverter}}" 
                                                       FontSize="11"
                                                       Foreground="#6c7086"
                                                       Margin="0,3,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- Buttons -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                            <Button Content="âœï¸" 
                                                    Command="{Binding DataContext.EditMasaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#89b4fa"
                                                    Foreground="White"
                                                    FontSize="12"
                                                    Padding="8,4"
                                                    Margin="0,0,5,0"
                                                    BorderThickness="0"
                                                    Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Button Content="ðŸ—‘ï¸" 
                                                    Command="{Binding DataContext.DeleteMasaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#f38ba8"
                                                    Foreground="White"
                                                    FontSize="12"
                                                    Padding="8,4"
                                                    BorderThickness="0"
                                                    Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Edit Panel -->
        <Border Grid.Column="1" 
                Background="#313244" 
                Margin="0,20,20,20" 
                CornerRadius="12"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#45475a" CornerRadius="12,12,0,0" Padding="20,15">
                    <TextBlock Text="{Binding IsNew, Converter={StaticResource BoolToNewEditMasaConverter}}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#cdd6f4"/>
                </Border>
                
                <!-- Form -->
                <StackPanel Grid.Row="1" Margin="20">
                    <TextBlock Text="Masa No" Foreground="#cdd6f4" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EditMasaNo, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#45475a" 
                             Foreground="#cdd6f4" 
                             BorderThickness="0"
                             Padding="10"
                             FontSize="14"/>
                    
                    <TextBlock Text="BÃ¶lÃ¼m" Foreground="#cdd6f4" Margin="0,15,0,5"/>
                    <ComboBox x:Name="BolumComboBox"
                              SelectedValue="{Binding EditBolum}"
                              Style="{StaticResource DarkComboBoxStyle}"
                              ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}">
                        <ComboBoxItem Content="ðŸ  Ä°Ã§eri" Tag="Iceri"/>
                        <ComboBoxItem Content="ðŸŒ³ DÄ±ÅŸarÄ± (BahÃ§e)" Tag="Disari"/>
                        <ComboBoxItem Content="ðŸ¢ Teras" Tag="Teras"/>
                        <ComboBoxItem Content="ðŸš— Paket / Gel-Al" Tag="Paket"/>
                    </ComboBox>
                    
                    <TextBlock Text="Kapasite (KiÅŸi)" Foreground="#cdd6f4" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding EditKapasite, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#45475a" 
                             Foreground="#cdd6f4" 
                             BorderThickness="0"
                             Padding="10"
                             FontSize="14"/>
                    
                    <CheckBox Content="Aktif" 
                              IsChecked="{Binding EditAktif}" 
                              Foreground="#cdd6f4" 
                              Margin="0,15,0,0"
                              FontSize="14"/>
                    
                    <!-- BÃ¶lÃ¼m AÃ§Ä±klamalarÄ± -->
                    <Border Background="#45475a" CornerRadius="8" Padding="15" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ BÃ¶lÃ¼m Bilgisi:" Foreground="#cdd6f4" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBlock Text="ðŸ  Ä°Ã§eri: Ä°Ã§ mekan masalarÄ±" Foreground="#a6adc8" FontSize="12"/>
                            <TextBlock Text="ðŸŒ³ DÄ±ÅŸarÄ±: BahÃ§e masalarÄ±" Foreground="#a6adc8" FontSize="12" Margin="0,3,0,0"/>
                            <TextBlock Text="ðŸ¢ Teras: Teras masalarÄ±" Foreground="#a6adc8" FontSize="12" Margin="0,3,0,0"/>
                            <TextBlock Text="ðŸš— Paket: Paket servis" Foreground="#a6adc8" FontSize="12" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                    <Button Content="Ä°ptal" 
                            Command="{Binding CancelEditCommand}"
                            Background="#6c7086"
                            Foreground="#cdd6f4"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="Kaydet" 
                            Command="{Binding SaveMasaCommand}"
                            Background="#a6e3a1"
                            Foreground="#1e1e2e"
                            FontWeight="Bold"
                            Padding="20,10"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Placeholder when not editing -->
        <Border Grid.Column="1" 
                Background="#313244" 
                Margin="0,20,20,20" 
                CornerRadius="12"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityInverseConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸª‘" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="DÃ¼zenlemek iÃ§in bir masa seÃ§in" 
                           Foreground="#6c7086" 
                           FontSize="14"
                           Margin="0,10,0,0"/>
                <TextBlock Text="veya yeni masa ekleyin" 
                           Foreground="#6c7086" 
                           FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
