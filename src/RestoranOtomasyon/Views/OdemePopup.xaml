                <!-- Ã–deme Tipi SeÃ§imi -->
                <TextBlock Text="Ã–deme YÃ¶ntemi" FontSize="14" Foreground="#888" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton x:Name="NakitRadio" GroupName="OdemeTipi" IsChecked="True"
                                 Command="{Binding SelectOdemeTipiCommand}" CommandParameter="Nakit">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <Border x:Name="border" Background="#2D2D44" CornerRadius="10" Padding="20,15" Margin="5" Cursor="Hand">
                                    <TextBlock Text="ðŸ’µ Nakit" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#27AE60"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FF6B35"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>
                    <RadioButton x:Name="KartRadio" GroupName="OdemeTipi"
