                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </RadioButton.Template>
                    </RadioButton>
                </StackPanel>

                <!-- Nakit GiriÅŸ AlanÄ± -->
                <StackPanel Visibility="{Binding SelectedOdemeTipi, Converter={StaticResource BoolToVis}}">
                    <!-- AlÄ±nan Tutar -->
                    <TextBlock Text="AlÄ±nan Tutar" FontSize="14" Foreground="#888" Margin="0,0,0,5"/>
                    <Border Background="#2D2D44" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                        <TextBlock Text="{Binding AlinanTutar, StringFormat='â‚º{0:N2}'}" 
                                   FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    </Border>
                    
                    <!-- Para ÃœstÃ¼ -->
                    <Border Background="#27AE60" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <Grid>
                            <TextBlock Text="Para ÃœstÃ¼" FontSize="14" Foreground="White"/>
                            <TextBlock Text="{Binding ParaUstu, StringFormat='â‚º{0:N2}'}" 
                                       FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    
                    <!-- Numpad -->
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Content="1" Style="{StaticResource NumpadButtonStyle}" Command="{Binding AddDigitCommand}" CommandParameter="1"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource NumpadButtonStyle}" Command="{Binding AddDigitCommand}" CommandParameter="2"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource NumpadButtonStyle}" Command="{Binding AddDigitCommand}" CommandParameter="3"/>
                        
                        <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource NumpadButtonStyle}" Command="{Binding AddDigitCommand}" CommandParameter="4"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource NumpadButtonStyle}" Command="{Binding AddDigitCommand}" CommandParameter="5"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource NumpadButtonStyle}" Command="{Binding AddDigitCommand}" CommandParameter="6"/>
                        
                        <Button Grid.Row="2" Grid.Column="0" Content="7" Style="{StaticResource NumpadButtonStyle}" Command="{Binding AddDigitCommand}" CommandParameter="7"/>
                        <Button Grid.Row="2" Grid.Column="1" Content="8" Style="{StaticResource NumpadButtonStyle}" Command="{Binding AddDigitCommand}" CommandParameter="8"/>
                        <Button Grid.Row="2" Grid.Column="2" Content="9" Style="{StaticResource NumpadButtonStyle}" Command="{Binding AddDigitCommand}" CommandParameter="9"/>
                        
                        <Button Grid.Row="3" Grid.Column="0" Content="C" Style="{StaticResource NumpadButtonStyle}" Background="#E74C3C" Command="{Binding ClearAmountCommand}"/>
                        <Button Grid.Row="3" Grid.Column="1" Content="0" Style="{StaticResource NumpadButtonStyle}" Command="{Binding AddDigitCommand}" CommandParameter="0"/>
                        <Button Grid.Row="3" Grid.Column="2" Content="=" Style="{StaticResource NumpadButtonStyle}" Background="#27AE60" Command="{Binding SetExactAmountCommand}"/>
                    </Grid>
                    
                    <!-- Ä°ÅŸlem ButonlarÄ± -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="ðŸ–¨ï¸ FiÅŸ YazdÄ±r" Style="{StaticResource ActionButtonStyle}" Background="#3498DB" 
                                Command="{Binding YazdirFisCommand}" Margin="0,0,10,0" Padding="20,12"/>
                        <Button Content="ðŸ‘ï¸ Ã–nizle" Style="{StaticResource ActionButtonStyle}" Background="#9B59B6" 
                                Command="{Binding OnizlemeFisCommand}" Margin="0,0,10,0" Padding="20,12"/>
                        <Button Style="{StaticResource ActionButtonStyle}" Background="#27AE60" 
                                Command="{Binding CompleteOdemeCommand}" Padding="25,12">
                            <Button.Content>
                                <TextBlock Text="{Binding IsAlmanUsuluMode, Converter={StaticResource BoolToOdemeButtonText}}"/>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- KarÄ±ÅŸÄ±k Ã–deme -->
                <StackPanel Visibility="{Binding SelectedOdemeTipi, Converter={StaticResource BoolToVis}}">
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="#27AE60" CornerRadius="10" Padding="15" Margin="0,0,5,0">
                            <StackPanel>
                                <TextBlock Text="Nakit" FontSize="14" Foreground="White"/>
                                <TextBlock Text="{Binding NakitTutar, StringFormat='â‚º{0:N2}'}" 
                                           FontSize="22" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="1" Background="#3498DB" CornerRadius="10" Padding="15" Margin="5,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Kart" FontSize="14" Foreground="White"/>
                                <TextBlock Text="{Binding KartTutar, StringFormat='â‚º{0:N2}'}" 
                                           FontSize="22" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <!-- SaÄŸ Panel: SipariÅŸ Ã–zeti ve Ä°ÅŸlemler -->
            <Border Grid.Column="1" Background="#16162A" CornerRadius="15" Padding="20">
                <DockPanel>
