                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Checkbox (Alman usulÃ¼ modda) - Sadece gÃ¶rsel, tÄ±klama Border'dan -->
                                            <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected, Mode=OneWay}" 
                                                      IsHitTestVisible="False"
                                                      Focusable="False"
                                                      Margin="0,0,8,0"
                                                      Visibility="{Binding DataContext.IsAlmanUsuluMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"/>
                                            
                                            <TextBlock Grid.Column="1" Text="{Binding Adet}" FontSize="14" Foreground="#888" Width="25"/>
                                            <TextBlock Grid.Column="2" Text="{Binding UrunAd}" FontSize="14" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="3" FontSize="14" FontWeight="Bold" Margin="10,0">
                                                <TextBlock.Style>
