                    <Grid>
                        <TextBlock Text="Toplam" FontSize="16" Foreground="#888"/>
                        <TextBlock Text="{Binding ToplamTutar, StringFormat='â‚º{0:N2}'}" 
                                   FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
                
                <!-- Ä°ndirim -->
                <Border Background="#2D2D44" CornerRadius="12" Padding="20" Margin="0,0,0,10"
                        Visibility="{Binding IndirimTutar, Converter={StaticResource BoolToVis}}">
                    <Grid>
                        <TextBlock Text="Ä°ndirim" FontSize="16" Foreground="#E74C3C"/>
                        <TextBlock Text="{Binding IndirimTutar, StringFormat='-â‚º{0:N2}'}" 
                                   FontSize="20" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
                
                <!-- Ã–denecek -->
