                                                    Visibility="{Binding IsIkram, Converter={StaticResource BoolToVis}}"/>
                                        </Grid>                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>