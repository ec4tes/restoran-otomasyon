                    <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="SipariÅŸ Ã–zeti" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <Button Content="{Binding IsAlmanUsuluMode, Converter={StaticResource BoolToAlmanUsuluText}}" 
                                HorizontalAlignment="Right"
                                Style="{StaticResource OdemeTipButtonStyle}"
                                Padding="10,5"
                                Command="{Binding ToggleAlmanUsuluCommand}"
                                ToolTip="Alman UsulÃ¼: Herkes kendi yediÄŸini Ã¶der"/>
                    </Grid>
                    
                    <!-- Alman UsulÃ¼ Bilgi Paneli -->
                    <Border DockPanel.Dock="Top" Background="#3D3D5C" CornerRadius="8" Padding="10" Margin="0,0,0,10"
                            Visibility="{Binding IsAlmanUsuluMode, Converter={StaticResource BoolToVis}}">
                        <StackPanel>
                            <TextBlock Text="ðŸº Alman UsulÃ¼ Ã–deme" FontSize="14" FontWeight="Bold" Foreground="#F1C40F"/>
                            <TextBlock Text="Ã–denecek Ã¼rÃ¼nÃ¼ seÃ§in, ardÄ±ndan Ã¶deme alÄ±n." FontSize="12" Foreground="#888" Margin="0,3,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Foreground="#27AE60">
                                    <Run Text="Ã–denen: "/>
                                    <Run Text="{Binding AlmanUsuluOdenenTutar, StringFormat='â‚º{0:N2}'}" FontWeight="Bold"/>
                                </TextBlock>
                                <TextBlock Grid.Column="1" Foreground="#E74C3C" HorizontalAlignment="Right">
                                    <Run Text="Kalan: "/>
                                    <Run Text="{Binding AlmanUsuluKalanTutar, StringFormat='â‚º{0:N2}'}" FontWeight="Bold"/>
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Ä°ÅŸlem ButonlarÄ± -->
                    <StackPanel DockPanel.Dock="Bottom">
                        <Button Style="{StaticResource ActionButtonStyle}"
                                Background="#27AE60" Command="{Binding ProcessOdemeCommand}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âœ… "/>
                                    <TextBlock Text="{Binding IsAlmanUsuluMode, Converter={StaticResource BoolToOdemeButtonText}}"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    
                    <!-- Kalem Listesi -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Kalemler}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" Padding="12" Margin="0,0,0,5" Cursor="Hand"
                                            MouseLeftButtonUp="KalemBorder_MouseLeftButtonUp">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#2D2D44"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="#27AE60"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsOdendi}" Value="True">
                                                        <Setter Property="Background" Value="#1A5C38"/>
                                                        <Setter Property="Opacity" Value="0.6"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
