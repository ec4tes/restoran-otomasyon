                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsOdendi}" Value="True">
                                                                <Setter Property="Text" Value="âœ“ Ã–dendi"/>
                                                                <Setter Property="Foreground" Value="#27AE60"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            
                                            <Button Grid.Column="4" Content="ðŸŽ" FontSize="12" 
